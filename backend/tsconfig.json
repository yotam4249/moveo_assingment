{
  "compilerOptions": {
    // Layout
    "rootDir": "src",
    "outDir": "dist",

    // Node (CommonJS)
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",

    // Types
    "lib": ["ES2020"],
    "types": ["node","jest"],
    "esModuleInterop": true,

    // Output helpers
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Strictness
    "strict": true,
    "skipLibCheck": true,

    // Remove/avoid ESM-only options that cause the error
    "isolatedModules": false
  },
  "include": ["src"]
}
